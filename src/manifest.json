{
  "manifest_version": 3,
  "name": "GHMonace",
  "version": "1.0.0",
  "description": "Replaces GitHub's code editor with Monaco Editor styled in GitHub Dark theme",
  "permissions": [],
  "host_permissions": ["https://github.com/*"],
  "background": {
    "service_worker": "service-worker.js"
  },
  "content_scripts": [
    {
      "matches": ["https://github.com/*"],
      "js": ["content.js"],
      "run_at": "document_idle"
    }
  ],
  "web_accessible_resources": [
    {
      "resources": [
        "editor.worker.js",
        "json.worker.js",
        "css.worker.js",
        "html.worker.js",
        "ts.worker.js"
      ],
      "matches": ["https://github.com/*"]
    }
  ],
  "icons": {
    "16": "icons/icon16.png",
    "48": "icons/icon48.png",
    "128": "icons/icon128.png"
  }
}
